<% layout('layouts/boilerplate') %>
<div class="container mt-3">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title">Create a new blog</h3>
      <form action="/blogs" method="POST" novalidate class="needs-validation">
          <div class="mb-3">
              <label class="form-label" for="blogtitle">Blog Title</label>
              <input class="form-control" type="text" id="blogtitle" placeholder="Blog Title" name="blogtitle" autofocus required>
          </div>
          <div class="mb-3">
            <label class="mt-3" for="bt">Blog text</label>
            <textarea class="form-control" name="blogtext" placeholder="Blog Text" required id="bt" rows="4"></textarea>
          </div>
          <button class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>


